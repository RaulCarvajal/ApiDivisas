<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raulrcg.apidivisas.MainActivity">

    <TextView
        android:id="@+id/campo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="MXN"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/mxn"
        app:layout_constraintTop_toBottomOf="@+id/campo" />

    <EditText
        android:id="@+id/mxn"
        android:layout_width="290dp"
        android:layout_height="47dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="PESOS"
        android:inputType="numberDecimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campo" />

    <TextView
        android:id="@+id/tvusd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="USD"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintRight_toLeftOf="@+id/usd"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.333" />

    <EditText
        android:id="@+id/usd"
        android:layout_width="290dp"
        android:layout_height="49dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:editable="true"
        android:ems="10"
        android:enabled="true"
        android:hint="DOLARES"
        android:inputType="numberDecimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mxn" />

    <TextView
        android:id="@+id/tveur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="EUR"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/tvusd"
        app:layout_constraintRight_toLeftOf="@+id/eur"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <EditText
        android:id="@+id/eur"
        android:layout_width="290dp"
        android:layout_height="49dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:editable="true"
        android:ems="10"
        android:enabled="true"
        android:hint="EUROS"
        android:inputType="numberDecimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usd" />

    <Button
        android:id="@+id/btnconv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="convertir"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eur" />

</android.support.constraint.ConstraintLayout>
